import os

import OasisTestSystem

def main():
    """
    Main function for script.
    """
    system_name = os.environ['SYSTEM_NAME']
    test_system = OasisTestSystem.create_test_system(system_name,
                                                     os.environ)
    test_system.run_test()

if __name__ == '__main__':
    main()
